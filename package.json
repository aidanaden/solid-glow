{
  "name": "solid-glow",
  "version": "0.0.1",
  "description": "Add a mouse-tracing glow effect to Solid components",
  "license": "MIT",
  "author": "aidanaden",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aidanaden/solid-glow.git"
  },
  "homepage": "https://github.com/aidanaden/solid-glow#readme",
  "bugs": {
    "url": "https://github.com/aidanaden/solid-glow/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {},
  "exports": {
    "solid": {
      "development": "./dist/dev.jsx",
      "import": "./dist/index.jsx"
    },
    "development": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dev.js"
      }
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "typesVersions": {},
  "scripts": {
    "dev": "vite serve dev",
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "format": "pnpm dlx @biomejs/biome check --apply ./src ./dev",
    "lint": "concurrently pnpm:lint:*",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 ./src/**",
    "lint:types": "tsc --noEmit",
    "ci": "pnpm format && pnpm lint",
    "update-deps": "pnpm up -Li"
  },
  "peerDependencies": {
    "solid-js": "^1.8.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.10",
    "esbuild-plugin-solid": "^0.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "postcss": "^8.4.32",
    "solid-js": "^1.8.7",
    "tailwindcss": "^3.3.7",
    "tsup": "^8.0.1",
    "tsup-preset-solid": "^2.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-solid": "^2.8.0"
  },
  "keywords": [
    "solid"
  ],
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.6.0"
  }
}
